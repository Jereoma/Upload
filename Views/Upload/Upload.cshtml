
@{
    Layout = null;
}

<!DOCTYPE html>


@model System.Data.DataTable
@using System.Data;

<h2>Upload File</h2>

@using (Html.BeginForm("Upload", "Upload", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        <input type="file" id="dataFile" name="upload" />
    </div>

    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-default" />
    </div>

    if (Model !=  null)
    {
        <table>
            <thead>
                <tr>
                    @foreach (DataColumn col in Model.Columns)
                    {
                    <th>
                        @*<input type="text" name="f-name" class="f-name01 form-control" />*@
                        @col.Table
                    </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                <tr>
                    @foreach (DataColumn col in Model.Columns)
                    {
                    <td>
                        
                                
                                        <TemplateField HeaderText="Name">
                                            <ItemTemplate>
                                                <TextBox @row[col.ColumnName]></TextBox>
                                            </ItemTemplate>
                                        </TemplateField>

                                  


                               
                                @*@row[col.ColumnName]*@
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    }
}
